<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background=" #00000000"
    android:orientation="vertical"
    tools:context=".Register">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="20sp"
            android:id="@+id/tv_trolaiif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Trở lại"

            />

        <Button
            android:layout_marginTop="10dp"
            android:layout_gravity="right"
            android:id="@+id/btn_luu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_style"
            android:text="Lưu"
            android:textColor="#ffffff"
            android:textSize="15dp"
            />

    </LinearLayout>

    <ImageView
        android:layout_marginBottom="@dimen/dp10"
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp170"
        android:layout_gravity="center"
        app:srcCompat="@drawable/man" />
    <EditText
        android:layout_marginTop="15dp"
        android:id="@+id/edit_Name"
        android:layout_width="@dimen/dp300"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="Họ Tên"
        android:inputType="textPersonName"
        />

    <EditText
        android:layout_marginTop="@dimen/dp5"
        android:id="@+id/edit_Email"
        android:layout_width="@dimen/dp300"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="Email"
        android:inputType="textPersonName"
        />
    <EditText
        android:id="@+id/ed_sdt"
        android:layout_width="@dimen/dp300"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:ems="10"
        android:hint="Số điện thoại"
        android:inputType="textPersonName"
        />
    <EditText
        android:id="@+id/ed_ngaysinh"
        android:layout_width="@dimen/dp300"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:ems="10"
        android:hint="Ngày sinh"
        android:inputType="date|textPersonName" />

    <EditText
        android:layout_gravity="center"
        android:id="@+id/ed_diachi"
        android:layout_width="@dimen/dp300"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Địa chỉ"
        android:inputType="textPersonName" />


    <EditText
        android:layout_gravity="center"
        android:id="@+id/ed_congty"
        android:layout_width="@dimen/dp300"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Công ty"
        android:inputType="textPersonName"
        />

    <EditText
        android:layout_gravity="center"
        android:id="@+id/ed_thongtin"
        android:layout_width="@dimen/dp300"
        android:layout_height="@dimen/dp50"

        android:hint="Thông tin khác"
        />



</LinearLayout>